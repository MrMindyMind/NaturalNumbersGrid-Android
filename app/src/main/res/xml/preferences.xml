<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <PreferenceCategory
        android:title="@string/preference_category_title_grid_settings"
        android:key="@string/preference_category_key_grid_settings">
        <android.support.v7.preference.SeekBarPreference
            android:title="@string/preference_columns_title"
            android:key="@string/preference_columns_key"
            android:defaultValue="@integer/preference_default_columns"
            app:min="@integer/preference_min_columns"
            android:max="@integer/preference_max_columns"/>
        <android.support.v7.preference.SeekBarPreference
            android:title="@string/preference_buffer_title"
            android:key="@string/preference_buffer_key"
            android:summary="@string/preference_buffer_summary"
            android:defaultValue="@integer/preference_default_buffer_size"
            app:min="@integer/preference_min_buffer_size"
            android:max="@integer/preference_max_buffer_size"/>
    </PreferenceCategory>
</PreferenceScreen>